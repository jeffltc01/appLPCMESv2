{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lpcmes.local/helpTopic.schema.json",
  "title": "HelpTopic",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "topicId",
    "title",
    "appliesToRoles",
    "appliesToPages",
    "purpose",
    "whenToUse",
    "prerequisites",
    "stepByStepActions",
    "expectedResult",
    "commonErrorsAndRecovery",
    "relatedTopics",
    "lastValidatedOnUtc",
    "validatedBy"
  ],
  "properties": {
    "topicId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "appliesToRoles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "appliesToPages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "purpose": {
      "type": "string",
      "minLength": 1
    },
    "whenToUse": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "stepByStepActions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "expectedResult": {
      "type": "string",
      "minLength": 1
    },
    "commonErrorsAndRecovery": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "error",
          "recovery"
        ],
        "properties": {
          "error": {
            "type": "string",
            "minLength": 1
          },
          "cause": {
            "type": "string"
          },
          "recovery": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "relatedTopics": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "lastValidatedOnUtc": {
      "type": "string",
      "format": "date-time"
    },
    "validatedBy": {
      "type": "string",
      "minLength": 1
    },
    "screenshotsOrDiagrams": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "knownLimitations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "escalationPath": {
      "type": "string"
    },
    "externalReferenceLinks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "siteScope": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "featureFlags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
